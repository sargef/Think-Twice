{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
          "name": "alexa-layouts",
          "version": "1.0.0"
        },
        {
            "name": "components",
            "version": "1.0",
            "source": "https://raw.githubusercontent.com/alexa-labs/workshop-starship-enterprise/master/Step-4-Make-Money-with-In-Skill-Purchasing/space-components.json"
        }
    ],
    "resources": [],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100vw",
                "height": "100vh",
                "alignItems": "center",
                "items": [
                    {
                        "when": "${'School Swoop'}",
                        "type": "Video",
                        "id": "1",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/SchoolSwoopSSVideo.mp4",
                        "repeatCount": 2
                    },
                         {
                        "when": "${'Concert mania'}",
                        "type": "Video",
                        "id": "2",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/ConcertManiaSSVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Planetary Attack'}",
                        "type": "Video",
                        "id": "3",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/PlanetaryAttack/PlanetaryAttackVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Chemistry Quiz'}",
                        "type": "Video",
                        "id": "4",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/ChemistryQuizSSVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Party Trick'}",
                        "type": "Video",
                        "id": "5",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/PartyTrickSSVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Shopping Shark'}",
                        "type": "Video",
                        "id": "6",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/ShoppingSharkSSVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Diary Dash'}",
                        "type": "Video",
                        "id": "8",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/DiaryDashSSVideo.mp4",
                        "repeatCount": -1
                    },
                         {
                        "when": "${'Appointment Appeal'}",
                        "type": "Video",
                        "id": "7",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "https://thinktwice3.s3-eu-west-1.amazonaws.com/NewLouderSounds/NN/SS/AppAppealVideo.mp4",
                        "repeatCount": -1
                    },
                        {
                        "when": "${}",
                        "type": "Video",
                        "id": "myVideoPlayer",
                        "height": "100vh",
                        "width": "100vw",
                        "scale": "best-fill",
                        "autoplay": true,
                        "source": "${payload.source}",
                        "repeatCount": -1
                    },
                    {
                        "when": "${viewport.shape == 'round'}",
                        "type": "AlexaTransportControls",
                        "mediaComponentId": "myVideoPlayer",
                        "primaryControlSize": "5vw",
                        "secondaryControlSize": "5vw",
                        "autoplay": "true",
                        "position": "absolute"
                    },
                    {
                        "when": "${viewport.shape != 'round'}",
                        "type": "Container",
                        "width": "100vw",
                        "height": "100vh",
                        "alignItems": "center",
                        "position": "absolute",
                        "items": [
                            {
                                "type": "Windows"
                            },
                            {
                                "type": "ControlPanel",
                                "position": "absolute",
                                "top": "75vh"
                            },
                            {
                                "type": "Container",
                                "width": "11.5vw",
                                "height": "30vh",
                                "position": "absolute",
                                "top": "78vh",
                                "left": "2vw",
                                "items": [
                                    {
                                        "type": "MediumButton",
                                        "title": "Instructions",
                                        "color": "@myBlue",
                                        "arguments": "instructions"
                                    }
                                ]
                            },
                            {
                                "type": "Container",
                                "width": "65vw",
                                "height": "40vh",
                                "position": "absolute",
                                "top": "64vh",
                                "alignItems": "center",
                                "justifyContent": "center",
                                "items": [
                                    {
                                        "type": "Container",
                                        "width": "65vw",
                                        "height": "20vh",
                                        "alignItems": "center",
                                        "justifyContent": "center",
                                        "direction": "row",
                                        "items": [
                                          
                                            {
                                                "type": "LargeButton",
                                                "title": "Begin",
                                                "color": "@myOrange",
                                                "arguments": "playgame"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Frame",
                                        "width": "65vw",
                                        "height": "5vh",
                                        "backgroundColor": "#1774A9",
                                        "borderRadius": "1vw",
                                        "item": {
                                            "type": "Container",
                                            "width": "65vw",
                                            "height": "5vh",
                                            "alignItems": "center",
                                            "justifyContent": "center",
                                            "items": [
                                                {
                                                    "type": "AlexaTransportControls",
                                                    "mediaComponentId": "myVideoPlayer",
                                                    "primaryControlSize": "2vw",
                                                    "secondaryControlSize": "2vw",
                                                    "autoplay": "true"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            },
                                                       {
                                "type": "Container",
                                "width": "11.5vw",
                                "height": "30vh",
                                "position": "absolute",
                                "top": "78vh",
                                "left": "87vw",
                                "items": [
                                    {
                                        "type": "MediumButton",
                                        "title": "Help",
                                        "color": "@myRed",
                                        "arguments": "help"
                                    }
                                    
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
